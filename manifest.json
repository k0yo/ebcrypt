{
  "manifest_version": 3,
  "name": "EBCrypt",
  "version": "0.1.0",
  "description": "Displays decrypted answers on Wiseman English Builder.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["scripting", "activeTab", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wiseman.com.hk/*"],
      "js": ["decrypt.js", "content.js"]
    }
  ]
}