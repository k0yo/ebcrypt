{
  "manifest_version": 3,
  "name": "EBCrypt",
  "version": "0.1.0",
  "description": "Displays decrypted answers on Wiseman English Builder.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "webRequest",
    "storage", 
    "declarativeNetRequest", 
    "declarativeNetRequestFeedback",
    "windows"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wiseman.com.hk/*"],
      "js": ["score-modifier.js", "main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://*.wiseman.com.hk/*"],
      "js": ["decrypt.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.wiseman.com.hk/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["score-modifier.js", "main.js"],
      "matches": ["*://*.wiseman.com.hk/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}